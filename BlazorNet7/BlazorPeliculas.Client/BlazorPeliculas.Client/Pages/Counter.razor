@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<ListadoPeliculas Peliculas="ObtenerPeliculas()"/>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

	List<Pelicula> ObtenerPeliculas()
	{
		return new List<Pelicula>()
		{
			new Pelicula { Titulo = "Avengers ", FechaLanzamiento= new DateTime(2024,5,6)},
			new Pelicula { Titulo = "Red lane", FechaLanzamiento= new DateTime(2024,7,25)},
			new Pelicula { Titulo = "Soledad", FechaLanzamiento= new DateTime(2023,12,6)}
		};
	}


}
